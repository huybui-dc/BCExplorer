<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_view">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">240dp</item>
    </style>

    <style name="image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card_text_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/gray1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="headertext" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="desctext" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>